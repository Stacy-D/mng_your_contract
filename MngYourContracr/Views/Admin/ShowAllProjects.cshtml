@model IEnumerable<MngYourContracr.MngYourContractDatabase.Project>

@{
    Layout = null;
}

<h2>Our Projects</h2>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
        background-color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #333;
        color: white;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All projects management</title>
</head>
<body>
    <div class="single">
        <div class="container">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClientId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ManagerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeamId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Deadline)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.budget)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.income)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.outgoings)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.User.FirstName)
                            @Html.DisplayFor(modelItem => item.Client.User.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manager.User.FirstName)
                            @Html.DisplayFor(modelItem => item.Manager.User.LastName)
                        </td>
                        <td>
                            @if (item.TeamId == null)
                            {
                                
                            }
                            else
                            {
                            @Html.DisplayFor(modelItem => item.TeamId)
                            }
                            
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Deadline)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.budget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.income)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.outgoings)
                        </td>
                    </tr>
                }

            </table>
            </div></div>
</body>
</html>
