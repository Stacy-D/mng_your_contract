@model MngYourContracr.MngYourContractDatabase.Team
@{
    ViewBag.Title = "CreateTeam";
}
<div class="single">
    <div class="container">
        <h2>Create a New Team</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Team Info</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Employees, "Employees", new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        <select name="employeeIdList" multiple="multiple" class = "form-control">
                            @foreach (var item in ViewBag.Employees)
                            {
                                <option value="@item.EmployeeId">@item.User.FirstName @item.User.LastName</option>
                            }
                        </select>
                    </div>

                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Teams")
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        </div></div>