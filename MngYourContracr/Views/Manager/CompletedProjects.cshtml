@model IEnumerable<MngYourContracr.MngYourContractDatabase.Project>

@{
    ViewBag.Title = "CompletedProjects";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
        background-color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #333;
        color: white;
    }
</style>
<h2>Finished Projects</h2>


<table class="table">
    <tr>
        <th>
            Client
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Budget
        </th>
        <th>
            Outgoings
        </th>
        <th>
            Tasks
        </th>
        <th>
            Team
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
    </tr>

@foreach (var item in Model)
{
    if (item.Status == "RESOLVED")
    {
    <tr>
        <td>
            @item.Client.User.FirstName @item.Client.User.LastName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.budget)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.outgoings)
        </td>
        <td>
            <a href="/Manager/ProjectTasks?projectId=@item.ProjectId">Tasks</a>
        </td>
        <td>
            @if (item.TeamId != null)
            {
                <a href="/Team/Details/@item.TeamId">Team №@item.TeamId</a>
            }
            else
            {
                <p>No team</p>
            }
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
    </tr>
    }
}
</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
